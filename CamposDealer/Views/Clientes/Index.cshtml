@model IEnumerable<Clientes>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Clientes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Clientes" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Criar novo Cliente
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-border table-striped" style="width:100%" </table>
    <thead>


        <tr>

            <th>
                Nome
            </th>
            
            <th>
                Cidade
            </th>
            <th>

            </th>
            
        </tr>
        
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width=50%>
                    @obj.nmCliente
                </td>
                <td width=30%>
                    @obj.nomeDaCidade
                </td>
                @* <td width=10%>
                    @obj.ID
                    </td>*@

                <td>

                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Clientes" asp-action="Edit" asp-route-id="@obj.ID"
                       class="btn btn-outline-primary mx-2"> <i class="bi bi-pencil-square"></i>Editar</a>
                        <a asp-controller="Clientes" asp-action="Delete" asp-route-id="@obj.ID"
                       class="btn btn-outline-danger mx-2"> <i class="bi bi-trash3-fill"></i>Excluir</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>

    </table>

</div>
